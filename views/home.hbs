<nav class="mb-3 navbar navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand mx-auto" href="/">
      <h1>Activision-Blizzard News! Now with less Diablo!</h1>
    </a>
  </div>
</nav>

<div class="container">

  <div class="row">
    <div class="col-sm-9">
      <ul class="list-group">
        {{#each articles}}
        <li data-id="{{this._id}}" class="mb-3 list-group-item list-group-item-action flex-column align-items-start" id="listItem">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{this.title}}</h5>
            <small>{{this.label}}</small>
          </div>
          <p class="mb-1">{{this.description}}</p>
          <a href="{{this.url}}" target="_blank" class="btn btn-primary">Full Article</a>
        </li>
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-3">
      <div class="row">
        <div class="col-sm-12">
          <h3>Comments</h3>
          <hr>
        </div>
      </div>
      <div class="row mb-5">
        <div id="commentSection">
          <h6>Click an article for a comment!</h6>
        </div>
      </div>
      <div class="row">
        <h3>Add a Comment</h3>
        <hr>
        <div class="form">
          <div class="form-group">
            <label for="commentTitle">Comment Title</label>
            <input type="title" class="form-control" id="commentTitle" placeholder="Title">
          </div>
          <div class="form-group">
            <label for="commentText">Comment</label>
            <textarea class="form-control" id="commentText" rows="3" placeholder="Enter a comment"></textarea>
          </div>
          <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
        </div>
      </div>
    </div>
  </div>

</div>